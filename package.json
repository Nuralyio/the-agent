{
  "name": "theagent-workspace",
  "version": "0.1.0",
  "description": "AI-powered The Agent automation framework workspace",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -w packages/core && npm run build -w packages/api && npm run build -w packages/cli && npm run build -w packages/web-ui && npm run build -w packages/mcp-server",
    "dev": "npm run build && concurrently --kill-others-on-fail --prefix=\"[{name}]\" --names=\"api,web-ui,test-server\" \"npm run dev -w packages/api\" \"npm run dev -w packages/web-ui\" \"node tools/test-server/server.js\"",
    "dev:core": "npm run dev -w packages/core",
    "dev:api": "npm run dev -w packages/api",
    "dev:ui": "npm run dev -w packages/web-ui",
    "dev:cli": "npm run dev -w packages/cli",
    "test": "npm run test:unit",
    "test:unit": "npm run test:unit --workspaces --if-present",
    "test:integration": "npm run test:integration --workspace=packages/core",
    "test:planning": "node packages/core/run-hierarchical-test.js",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "npm run typecheck --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules/.cache",
    "install:browsers": "npm run install:browsers -w packages/core"
  },
  "keywords": [
    "browser-automation",
    "playwright",
    "puppeteer",
    "selenium",
    "ai",
    "web-scraping",
    "typescript",
    "cross-browser",
    "testing",
    "monorepo"
  ],
  "author": "Browser Automation Framework Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nuralyio/the-agent.git"
  },
  "bugs": {
    "url": "https://github.com/Nuralyio/the-agent/issues"
  },
  "homepage": "https://github.com/Nuralyio/the-agent#readme",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm run typecheck && npm run test"
    }
  },
  "dependencies": {
    "@fluentui/react-icons": "^2.0.307",
    "@xmldom/xmldom": "^0.8.11",
    "emmet": "^2.4.11"
  }
}
