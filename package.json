{
  "name": "theagent-workspace",
  "version": "1.0.0",
  "description": "AI-powered browser automation framework workspace",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "node tools/scripts/dev.js",
    "dev:core": "npm run dev -w packages/core",
    "dev:api": "npm run dev -w packages/api-server",
    "dev:ui": "npm run dev -w packages/web-ui",
    "dev:cli": "npm run dev -w packages/cli",
    "test": "npm run test --workspaces",
    "test:unit": "npm run test:unit --workspaces",
    "test:integration": "npm run test:integration -w packages/core",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "npm run typecheck --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules/.cache",
    "install:browsers": "npm run install:browsers -w packages/core",
    "example:simple": "npm run example:simple -w apps/examples",
    "example:advanced": "npm run example:advanced -w apps/examples"
  },
  "keywords": [
    "browser-automation",
    "playwright",
    "puppeteer",
    "selenium",
    "ai",
    "web-scraping",
    "typescript",
    "cross-browser",
    "testing",
    "monorepo"
  ],
  "author": "Browser Automation Framework Team",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm run typecheck && npm run test"
    }
  }
}
