{
  "name": "browser-automation-framework",
  "version": "1.0.0",
  "description": "AI-powered browser automation framework with multi-adapter support (Playwright, Puppeteer, Selenium)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "ts-node src/tests/integration/test-runner.ts",
    "test:server": "node test-server/server.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "lint:check": "eslint . --ext .ts,.js --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && npm run lint:check && npm run typecheck",
    "precommit": "npm run lint:fix && npm run format && npm run typecheck",
    "ci:test": "npm test -- --headless all",
    "ci:validate": "npm run lint:check && npm run typecheck && npm run ci:test",
    "example:simple": "ts-node src/examples/simple-example.ts",
    "example:advanced": "ts-node src/examples/advanced-example.ts",
    "example:ai": "ts-node src/examples/ai-example.ts",
    "example:visualization": "ts-node src/examples/visualization-example.ts",
    "serve:visualization": "ts-node src/visualization/server-start.ts",
    "install:browsers": "npx playwright install",
    "postinstall": "npm run install:browsers"
  },
  "keywords": [
    "browser-automation",
    "playwright",
    "puppeteer",
    "selenium",
    "ai",
    "web-scraping",
    "typescript",
    "cross-browser",
    "testing"
  ],
  "author": "Browser Automation Framework Team",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^15.3.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "dependencies": {
    "@langchain/ollama": "^0.2.3",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "langchain": "^0.3.30",
    "openai": "^4.62.1",
    "playwright": "^1.54.2",
    "puppeteer": "^24.16.0",
    "uuid": "^9.0.1"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint:check && npm run typecheck && npm run test"
    }
  }
}
