# TheAgent Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===========================================
# LLM Configuration (Single Profile via Environment Variables)
# ===========================================
# To configure multiple LLM profiles, use the configuration file (see theagent.config.template.js).
# The environment variables below only support a single profile (for backward compatibility).

# Active LLM profile selection
THEAGENT_LLM_ACTIVE=local

# Single LLM profile from environment (backward compatibility)
THEAGENT_LLM_PROFILE=env
THEAGENT_LLM_PROVIDER=ollama
THEAGENT_LLM_MODEL=llama3:8b
THEAGENT_LLM_BASE_URL=http://localhost:11434

# API Keys (uncomment and set for cloud providers)
# THEAGENT_LLM_API_KEY=your-api-key-here
# OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key

# LLM Model Parameters
# THEAGENT_LLM_TEMPERATURE=0.7
# THEAGENT_LLM_MAX_TOKENS=2048

# Legacy AI configuration (still supported)
# THEAGENT_AI_PROVIDER=ollama
# THEAGENT_AI_MODEL=llama3:8b
# THEAGENT_AI_BASE_URL=http://localhost:11434

# ===========================================
# Browser Configuration
# ===========================================

# Browser Settings
THEAGENT_ADAPTER=playwright
THEAGENT_BROWSER=chrome
THEAGENT_HEADLESS=false
THEAGENT_TIMEOUT=30000
THEAGENT_RETRIES=3

# ===========================================
# Execution Configuration
# ===========================================

# File Paths
THEAGENT_LOGS_DIR=./execution-logs
THEAGENT_SCREENSHOTS_DIR=./screenshots
THEAGENT_SCREENSHOT_ON_ERROR=true
