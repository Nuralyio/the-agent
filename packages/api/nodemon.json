{
  "watch": ["src"],
  "ext": "ts,js",
  "ignore": [
    "**/*.test.*",
    "**/*.spec.*",
    "**/logs/**",
    "**/dist/**",
    "**/node_modules/**",
    "**/execution-logs/**/*",
    "execution-logs/**/*",
    "*.log",
    "**/*.log",
    "**/*.json",
    "**/*.csv",
    "**/*.html",
    "**/*.png",
    "**/*.jpg",
    "**/*.jpeg",
    "**/*.gif",
    "**/*.md",
    "**/*.xml", 
    "**/*.puml",
    "screenshots/**/*"
  ],
  "exec": "ts-node src/server.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "signal": "SIGTERM",
  "gracefulShutdown": true
}
