{
  "name": "@theagent/cli",
  "version": "1.0.0",
  "description": "Command-line interface for The Agent automation framework",
  "main": "dist/index.js",
  "bin": {
    "theagent": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/cli.ts",
    "test": "jest --passWithNoTests",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "cli",
    "theagent",
    "automation",
    "command-line",
    "ai-automation"
  ],
  "author": "The Agent Framework Team",
  "license": "MIT",
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "@types/inquirer": "^8.2.10",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@theagent/core": "^1.0.0",
    "commander": "^11.0.0",
    "chalk": "^4.1.2",
    "inquirer": "^8.2.6"
  }
}
