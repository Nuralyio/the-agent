{
  "name": "@theagent/core",
  "version": "1.0.0",
  "description": "Core browser automation framework with multi-adapter support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/index.ts",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --passWithNoTests --forceExit",
    "test:integration": "ts-node src/tests/integration/test-runner.ts",
    "test:watch": "jest --watch --forceExit",
    "test:coverage": "jest --coverage --forceExit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "install:browsers": "npx playwright install"
  },
  "keywords": [
    "browser-automation",
    "playwright",
    "puppeteer",
    "selenium",
    "ai",
    "typescript"
  ],
  "author": "Browser Automation Framework Team",
  "license": "MIT",
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.0",
    "@types/uuid": "^9.0.8",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@langchain/ollama": "^0.2.3",
    "axios": "^1.11.0",
    "dotenv": "^16.4.5",
    "langchain": "^0.3.30",
    "openai": "^4.62.1",
    "playwright": "^1.54.2",
    "puppeteer": "^24.16.0",
    "uuid": "^9.0.1"
  }
}
